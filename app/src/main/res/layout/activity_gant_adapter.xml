<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pupthesis.chronos.Adapter.GantAdapter">


    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:id="@+id/card"
        android:layout_height="wrap_content"

        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <ImageView
                android:id="@+id/taskimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:background="@color/AppbarColor"
                android:padding="12dp"
                app:srcCompat="@drawable/undone" />

            <TextView
                android:id="@+id/nameoftaskTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/taskimage"
                android:text="Name of the project"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/nameoftaskTV"
                android:layout_toRightOf="@+id/taskimage"
                android:paddingBottom="5dp"
                android:text="Status"

                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/DescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateTV"
                android:layout_toEndOf="@+id/taskimage"
                android:layout_toRightOf="@+id/taskimage"
                android:maxLines="3"
                android:text="it will dispaly the description of the project" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
